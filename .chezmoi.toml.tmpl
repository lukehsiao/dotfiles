{{- $email := promptStringOnce . "email" "Email address" -}}

{{- $dpichoices := list "retina" "mid" "low" -}}
{{- $dpi := promptChoiceOnce . "dpi" "What is the resolution if your display" $dpichoices -}}

{{- $mousedpichoices := list "high" "low" -}}
{{- $mousedpi := promptChoiceOnce . "mousedpi" "What is the dpi of your mouse" $mousedpichoices -}}

encryption = "gpg"
[gpg]
args = ["--quiet"]
recipient = "0xBE92A2933EB7CA99"

[data]
email = {{ $email | quote }}
dpi = {{ $dpi | quote }}
mousedpi = {{ $mousedpi | quote }}

[edit]
command = "hx"

[merge]
command = "nvim"
args = ["-d", "{{`{{ .Destination }}`}}", "{{`{{ .Source }}`}}", "{{`{{ .Target }}`}}"]
